<main>
  <section class="row mb-3">
        {{#with navigation}}
        {{#each links}}
        <div class="col-2">
          <div class="nav"></div>
            <div class="nav nav-tabs">
                <a href="{{href}}" class="nav-link {{#if @last}}disabled{{/if}}">{{text}}</a>
            </div>
            </div>
        </div>
        {{/each}}
        {{/with}}
    </section>
    <section class="row">
      {{#with formBlock}}
        <div class="col-8">
          <h1 class='mt-4 ms-2'>{{header}}</h1>
          {{#with rating}}
            <div class="ms-3 mt-4">{{title}}: {{value}}</div>
          {{/with}}
          {{#with actionBlock}}
              <div class="nav nav-tabs">
                {{#each tabs}}
                  <a href="#" class="nav-link {{#if @last}} active {{/if}}">{{text}}</a>
                {{/each}}
              </div>
              <hr class="mt-5">
              <div class="card mt-5">
                {{#with report}}
                  <div class="ms-3 mt-3">{{title}}</div>
                  {{#with button}}
                    <div class="ms-3 mt-2 mb-3">
                        <a href="{{link}}" class="btn btn-secondary btn-sm">{{text}}</a>
                    </div>
                  {{/with}}
                {{/with}}
              </div>
          {{/with}}
          <hr class="my-5">
          {{#with feedbackBlock}}
            <h2 class="ms-4">{{title}}</h2>
            <div class="row">
              {{#each buttons}}
                <div class="col mt-4">
                  <a href="{{link}}" class="{{#if isWarning}}btn btn-warning ms-5{{/if}}{{#if isSuccess}}btn btn-success ms-4{{/if}}{{#if isDanger}}btn btn-danger ms-4 {{/if}}">
                    {{text}}
                  </a>
                </div>
              {{/each}}
            </div>
          {{/with}}
        </div>
        <div class="col-4">
          {{#with goodsInfo}}
            <div class="card">
              <div class="card-body">
                <img
                  src='{{photo}}'
                  class='img-fluid rounded-start ms-3 mt-2'
                  alt='Image'/>
                  <h5 class='mt-2 ms-3'>{{name}}</h5>
              </div>
            </div>
            <div class="card mt-4">
              <div class="card-body">
                <h5 class="ms-3">{{price}}</h5>
                <div class="my-1 ms-3 mb-2">
                  {{#if inMarket}}
                  <em>Є в наявності</em>
                  {{/if}}
                </div>
                 {{#each buttons}}
                <div class="col ms-3">
                  <a href="{{link}}" class="{{#if isPrimary}}btn btn-primary {{/if}}{{#if isSecondary}}btn btn-secondary mt-2{{/if}}">
                    {{text}}
                  </a>
                </div>
              {{/each}}
              </div>
            </div>
            <div class="card mt-4">
              <div class="card-body">
                <div class="ms-3">{{seller.title}}: <strong>{{seller.value}}</strong></div>
              </div>
            </div>
          {{/with}}
        </div>
      {{/with}}
    </section>
    <hr class="my-5">
    <section>
      {{#each reviewList}}
      <div class="card mt-5">
        <div class="card-body">
          {{#with title}}
          <div class="card">
            <div class="card-body">
              <h5>{{userName}}</h5>
              <div>{{caption}}</div>
              <div class="mt-3">{{date}}</div>
            </div>
          </div>
          {{/with}}
          {{#with reviewBody}}
            <div class="card">
              <div class="card=body ms-3">
                <div>{{seller.title}}: {{seller.value}}</div>
                <div class="mt-3">{{rating.title}}: {{rating.value}}</div>
                <div class="mt-3">{{text}}</div>
                <div class="mt-3"><strong>{{advantages.title}}:</strong></div>
                <div >{{advantages.text}}</div>
                <div class="mt-3"><strong>{{disadvantages.title}}:</strong></div>
                <div>{{disadvantages.text}}</div>
                <div class="mt-3 mb-2">
                  {{#each images}}
                  <img src="{{this}}" alt="">
                  {{/each}}
                </div>
              </div>
            </div>
            {{#each coments}}
              <div class="card ms-5 my-2">
                <div class="card-body"></div>
            <h5 class="ms-2 mb-4">
                {{userName}}
            </h5>
            <div class="ms-2 mb-3">
                {{date}}
            </div>
            <div class="ms-2 mb-3">
                {{text}}
            </div>
        </div>
        {{/each}}
          {{/with}}
        </div>
      </div>
      {{/each}}
        {{#with service}}
          <div class="card mt-5 text-bg-success">
            <h2 class="text-center mt-2">{{title}}</h2>
            <div class="text-center mt-3">{{description}}</div>
              {{#each buttons}}
              <div class="text-center mt-3">
                <a href="{{link}}" class="btn btn-primary">{{text}}</a>
              </div>
              {{/each}}
          </div>
        {{/with}}
    </section>
     <hr class="mb-5 mt-5">
  <footer>
     <div class="row">
            {{#each footer}}
            <div class="col-2 list-group">
                <ul class="nav flex-column">
                    {{#each this}}
                    <li class="nav-item">
                        <a href="{{link}}" class="nav-link {{#if @last}}disabled{{/if}} list-item" target="_blank">
                            {{text}}
                        </a>
                    </li>
                    {{/each}}
                </ul>
            </div>
            {{/each}}
        </div>
  </footer>
</main>