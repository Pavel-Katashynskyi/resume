    <main class="row">
    {{#with main}}
        <div >
        <section class="col ms-3">
            {{> title big=true data="My education"}}
            <ul>
                {{#each education}}
                <li>
                    {{name}}
                    {{#unless isEnd}}
                    (ще в процесі)
                    {{/unless}}
                </li>
                {{/each}}
            </ul>
        </section>
        <section class="col mt-5 ms-3">
            {{> title data= "My certificates"}}
            <ul>
                {{#each certificates}}
                <li>
                    {{name}}
                    ({{id}})
                </li>
                {{/each}}
            </ul>
        </section>
        </div>
    {{/with}}
    </main>