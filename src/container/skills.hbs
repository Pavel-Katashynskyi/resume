
   
    <main class="row">
         {{#with main}}
        <section class="col m-3">
            {{> title big=true data="All skills"}}
            <ul>
                {{#each skills}}
                <li>
                    {{name}}
                    {{#if point includeZero=true}} ({{point}}) {{/if}}
                    {{#if isTop}} (TOP) {{/if}}
                    {{#unless point includeZero=true}} (не вивчаємо) {{/unless}}

                    {{#unless point}}
                    {{#if point includeZero=true}} (зараз вивчаємо) {{/if}}
                    {{/unless}}
                </li>
                {{/each}}
            </ul>
        </section>
        <section class="row">
            <div class="col m-3">
            {{> title data="My hobbies"}}
            <ol>
                {{#each hobbies}}
                <li>
                    {{name}}
                    {{#if isMain includeZero=true}} (favorite) {{/if}}
                </li>
                {{/each}}
                </ul>
                </div>
        </section>
            {{/with}}
    </main>
