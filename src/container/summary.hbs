{{!--
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
--}}


    
    <main class="row m-3">
        {{#with main}}
        <section class="col mb-3">
            {{> title data= 'Summary' big=true }}
            <div >
                <p>
                    {{summary.text}}
                </p>
            </div>
        </section>
        {{#with experience}}
        <section class="col ms-3">
            {{>title data= 'Other experience'}}
            <div>
                <p>
                    {{text}}
                </p>
            </div>
        </section>
        {{/with}}
    {{/with}}
    </main>



