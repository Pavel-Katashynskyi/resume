<main>
  <section class="row mb-3 mt-2 ms-2">
    {{#with navigation}}
    {{#each links}}
    <div class="col-2">
      <div class="nav">
        <div class="nav nav-tabs">
            <a href="{{href}}" class="nav-link {{#if @last}}disabled{{/if}}">{{text}}</a>
        </div>
        </div>
    </div>
    {{/each}}
    {{/with}}
</section>
  <section class="mt-5 ms-3">
        <ol class="breadcrumb">
            {{#each breadcrumb}}
            {{#if @last}}
            <li class="breadcrumb-item active" aria-current="page">{{name}}</li>
            {{else}}
            <li class="breadcrumb-item"><a href="{{url}}">{{name}}</a></li>
            {{/if}}
            {{/each}}
        </ol>
    </section>
    <h1 class="mt-5 ms-3">{{header}}</h1>
    <section class="row mt-4 ms-2">
      <div class="row">
        {{#each sortBlock}}
        <div class="col-3">
          <select class="form-select">
             <option value="" disabled selected>{{placeholder}}</option>
            {{#each options}}
            <option value="{{value}}">{{text}}</option>
            {{/each}}
          </select>
        </div>
        {{/each}}
      </div>
    </section>
    <section class="row">
      <div class="col-4">
      <div class="card mt-4 ms-4">
        {{#with filterBlock}}
        <div class="card-body">
          {{#with sellers}}
            <h6>{{title}}</h6>
            {{#each list}}
              <div class="form-check mt-2">
                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">{{value}}</label>
              </div>
            {{/each}}
          {{/with}}
        </div>
        <hr>
        <div class="card-body">
          {{#with brands}}
            <h6>{{title}}</h6>
            <input class="form-control mt-3" type="text" placeholder="{{input.placeholder}}" aria-label="default input example">
            {{#each options}}
              <div class="form-check mt-2">
                <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">{{value}}</label>
              </div>
            {{/each}}
          {{/with}}
        </div>
        <hr>
        <div class="card-body">
          {{#with price}}
            <h6>{{title}}</h6>
            {{#with range}}
            <input class="form-control mt-3" type="text" placeholder="{{from}}" aria-label="default input example">
            <input class="form-control mt-3" type="text" placeholder="{{to}}" aria-label="default input example">
            {{/with}}
            <a href="{{button.link}}" class="btn btn-outline-secondary mt-3">{{button.text}}</a>
          {{/with}}
        </div>
        <hr>
        <div class="card-body">
          {{#each filterList}}
            <h6 class="mt-3 mb-3">{{title}}</h6>
             {{#each options}}
              <div class="form-check mt-2">
                <input class="form-check-input " type="checkbox" value="" id="flexCheckDefault">
                <label class="form-check-label" for="flexCheckDefault">{{value}}</label>
              </div>
            {{/each}}
          {{/each}}
        </div>
        {{/with}}
      </div>
      </div>
      <div class="col-8">
        <div class="row">
          {{#each goodsList}}
          <div class="col-6">
          <div class="card mt-4">
            <div class="card-body">
          <img
        src='{{img}}'
        class='img-fluid rounded-start'
        alt='Image'/>
      </div>
        <h6><span class="badge {{#if isHot}}bg-warning{{/if}} rounded-pill text-uppercase ms-3">hot!</span>
        <span class="badge {{#if isNew}}bg-primary{{/if}} rounded-pill ms-3">Нове</span></h6>
        <h6><span class="badge {{#if isFast}}bg-success{{/if}} ms-3">Швидка доставка</span></h6>
        <h6><span class="badge {{#if isFree}}bg-secondary{{/if}} ms-3">Безкоштовна доставка</span></h6>
        <h5 class="mt-2 ms-3">{{name}}</h5>
        <p class="mt-2 ms-3">{{review.amount}} {{review.text}}</p>
        <h5 class=" ms-3">{{price}}</h5>   
        <p class="ms-3">{{delivery}}</p>
          {{#each buttons}}
          <a href="{{link}}" class="btn {{#if isPrimary}}btn-primary{{/if}}{{#if isSecondary}}btn-secondary{{/if}} ms-3 mt-2 btn-sm col-6">{{text}}</a>
          {{/each}}
          {{#each characteristics}}
            <ul class='mt-2'>
              <li>{{title}}: {{value}}</li>
            </ul>
          {{/each}}
      </div>
      </div>
      {{/each}}
      </div>
      </div>
    </section>
    <section>
      {{#with service}}
          <div class="card mt-5 text-bg-success">
            <h2 class="text-center mt-2">{{title}}</h2>
            <div class="text-center mt-3">{{description}}</div>
              {{#each buttons}}
              <div class="text-center mt-3">
                <a href="{{link}}" class="btn btn-primary mb-3">{{text}}</a>
              </div>
              {{/each}}
          </div>
        {{/with}}
    </section>
    <hr class="mt-5">
    <footer class='mt-2'>
      <div class="row">
            {{#each footer}}
            <div class="col-2 list-group">
                <ul class="nav flex-column">
                    {{#each this}}
                    <li class="nav-item">
                        <a href="{{link}}" class="nav-link {{#if @last}}disabled{{/if}} list-item" target="_blank">
                            {{text}}
                        </a>
                    </li>
                    {{/each}}
                </ul>
            </div>
            {{/each}}
        </div>
    </footer>
</main>