{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
  <main>
    {{#with heading}}
      <div class='card'>
        <div class='card-body'>
          <h1>{{main.title}}</h1>
          <div>{{main.text}}</div>
          <div>
            <br />
            <button
              class='btn btn-primary'
            >{{main.button_text.solid}}</button>
            <button
              class='btn btn-outline-primary'
            >{{main.button_text.outline}}</button>
          </div>
        </div>
      </div>
      <br />
      <div class='card'>
        <div class='card-body'>
          <h2>{{second.title}}</h2>
          <div>{{second.text}}</div>
          <div>
            <br />
            <button
              class='btn btn-secondary'
            >{{second.button_text.solid}}</button>
            <button
              class='btn btn-outline-secondary'
            >{{second.button_text.outline}}</button>
          </div>
        </div>
      </div>
      <br />
      <div class='card'>
        <div class='card-body'>
          <h3>{{subblock.title}}</h3>
          <div>{{subblock.text}}</div>
          <div>
            <br />
            <button
              class='btn btn-success'
            >{{subblock.button_text.solid}}</button>
            <button
              class='btn btn-outline-success'
            >{{subblock.button_text.outline}}</button>
          </div>
        </div>
      </div>
    {{/with}}
    <br />
    {{#with nested_display}}
      <div class='card'>
        <div class='card-body'>
          <div class='display-1'>{{title}}</div>
          <div class='card'>
            <div class='card-body'>
              <div
                class='display-4'
              >{{children_display.title}}</div>
              <div>{{children_display.text}}</div>
              <div>
                <br />
                <button
                  class='btn btn-primary'
                >{{children_display.button.text}}</button>
              </div>
            </div>
          </div>
          <div class='display-6'>{{header_text}}</div>
          <button
            class='btn btn-primary'
          >{{button.text}}</button>
        </div>
      </div>
    {{/with}}
    <br />
    {{#with paragraph}}
      <div class='card'>
        <div class='card-body'>
          <div class='text-uppercase'>{{title}}</div>
          <div class='text-lowercase'>{{text}}</div>
          {{#with button}}
            <a
              href='{{url}}'
              target='_blank'
              type='button'
              class='btn btn-link'
            >{{text}}</a>
          {{/with}}
          <div class='card'>
            <div class='card-body'>
              {{#each list_name}}
                <ul>
                  <li><a
                      href='{{url}}'
                      target='_blank'
                      type='button'
                      class='btn btn-link'
                    >{{text}}</a></li>
                </ul>
              {{/each}}
            </div>
          </div>
        </div>
      </div>

    {{/with}}

  </main>

</div>

