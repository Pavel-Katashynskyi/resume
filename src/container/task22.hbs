{{!
Це код container файлу для summary сторінки,
в якому міститься код, котрий буде віддаватися по шляху (PATH) - "/summary"
}}

<div>
  <header>
    <h1 class='text-center'>{{page_header.title}}</h1>
    <div
      class='text-center text-uppercase'
    >{{page_header.description}}</div>
  </header>
  <main>
    {{#with section}}
      {{#with about_us}}
        <div class='card'>
          <div class='card-body'>
            <div
              class='display-6 text-end'
            >{{title_list.main}}</div>
            <h2 class='text-end'>{{title_list.sub}}</h2>
            <button
              class='btn btn-outline-info'
            >{{button.text}}</button>
          </div>
        </div>
      {{/with}}

      <br />
      {{#with advantage}}
        <div class='card'>
          <div class='card-body'>
            <div
              class='display-5 text-muted'
            >{{title}}</div>
            <div class='card'>
              <div class='card-body'>
                <div
                  class='display-4 text-muted'
                >{{efficiency.title}}</div>
                <h6>{{efficiency.sub_title}}</h6>
                <div>{{efficiency.description}}</div>
                <br />
                <button
                  class='btn btn-outline-warning'
                >{{efficiency.button}}</button>
              </div>
            </div>
            <br />
            <div class='card'>
              <div class='card-body'>
                <div
                  class='display-4 text-muted text-center'
                >{{innovation.title}}</div>
                <h6
                  class='text-center'
                >{{innovation.sub_title}}</h6>
                <div
                  class='text-center'
                >{{innovation.description}}</div>
                <br />
                <button
                  class='btn btn-outline-warning'
                >{{innovation.button}}</button>
              </div>
            </div>
            <br />
            <div class='card'>
              <div class='card-body'>
                <div
                  class='display-4 text-muted text-end'
                >{{collaboration.title}}</div>
                <h6
                  class='text-end'
                >{{collaboration.sub_title}}</h6>
                <div
                  class='text-end'
                >{{collaboration.description}}</div>
                <br />
                <button
                  class='btn btn-outline-warning'
                >{{collaboration.button}}</button>
              </div>
            </div>
          </div>
        </div>
      {{/with}}
      <br />
      {{#with agreement}}
        <div class='card'>
          <div class='card-body'>
            <div class='display-5'>{{title}}</div>
            <div class='card'>
              <div class='card-body'>
                <h5>{{info.sub_title}}</h5>
                <div class='card'>
                  <div class='card-body'>
                    <div>{{info.detail.text}}</div>
                    <br />
                    <button
                      class='btn btn-success'
                    >{{info.detail.button}}</button>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      {{/with}}
    {{/with}}
  </main>
</div>

